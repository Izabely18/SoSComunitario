if ( Vítima: criança|| Adolecente)
{ email vai para: Conselho tutelar}

Else 
 { email vai para: Policia }

  document.getElementById('contact-form').addEventListener('submit', function(event) {
                event.preventDefault();
                // these IDs from the previous steps
                if (value=Criança||Adolecente)
                emailjs.sendForm('ConselhoTutelar', 'SOScomunitario', this)
                    .then(function() {
                      window.location.href = "mdgSucesso.html"
                    }, function(error) {
                        console.log('FAILED...', error);
                        window.location.href = "msgErro.html"
                    });
            });